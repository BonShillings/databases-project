<font size = "3" color="green"> Rater Queries </font>

<br> <br>

<!-- query l -->
<%= form_tag("/search", method: "get") do %>
<%= label_tag(:q, "Display best rater info in terms of: ") %>
<%= select_tag(:lchoice, options_for_select([['food', 1],['mood', 2]], 2), :lchoice => params[:lchoice]) %>
<%= submit_tag("Display") %>
<% end %>
<br>
<!-- query m -->
