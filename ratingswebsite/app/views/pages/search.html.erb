<font size = "3" color="orange""> Static Queries </font>

<br> <br>

<!-- query_fgko -->

<%= form_tag("/search", method: "get") do %>
<%= label_tag(:q, "Show: ") %>
<%= select_tag(:fchoice, options_for_select([['rating distribution', 1],['details for unrated restaurants', 2],['best rater info', 3],['diverse raters', 4]], 4), :fchoice => params[:fchoice]) %>
<%= submit_tag "Display" %>
<% end %>

<br> <br>

<font size = "3" color="purple"> Results </font>

<br> <br>
<div id="resultsTable">
<table BORDER="2" CELLPADDING="2" CELLSPACING="2">
    <thead>
       <% if (@results != []) %>
            <% (1..@results.nfields()).each do |i| %>
               <th> <%= @results.fname(i - 1)  %> </th>
            <% end %>
        <% end %>
        <th colspan = @results.length></th>
    </thead>
    <tbody>

       <tr> <% @results.each do |result| %> </tr>
             <% result.values.each do |value| %>
               <td>  <%= value %> </td>
            <% end %>
        <% end %>

    </tbody>
</table>
<br />
</div>
