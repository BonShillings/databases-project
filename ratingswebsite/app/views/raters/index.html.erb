<h1>Listing Raters</h1>

<table BORDER="2" CELLPADDING="2" CELLSPACING="2">
  <thead>
    <tr>
      <th>Email</th>
      <th>Name</th>
      <th>Join date</th>
      <th>Rtype</th>
      <th>Reputation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @raters.each do |rater| %>
      <tr>
        <td><%= rater.email %></td>
        <td><%= rater.rater_name %></td>
        <td><%= rater.join_date %></td>
        <td><%= rater.rtype %></td>
        <td><%= rater.reputation %></td>
        <td><%= link_to 'Show', rater %></td>
        <td><%= link_to 'Edit', edit_rater_path(rater) %></td>
        <td><%= link_to 'Destroy', rater, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

