<h1>Listing Menuitems</h1>

<table BORDER="2" CELLPADDING="2" CELLSPACING="2">
  <thead>
    <tr>
      <th>Name</th>
      <th>Mtype</th>
      <th>Mcategory</th>
      <th>Description</th>
      <th>Price</th>
      <th>Restaurant_id</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @menuitems.each do |menuitem| %>
      <tr>
        <td><%= menuitem.name %></td>
        <td><%= menuitem.mtype %></td>
        <td><%= menuitem.mcategory %></td>
        <td><%= menuitem.description %></td>
        <td><%= menuitem.price %></td>
        <td><%= menuitem.restaurant_id %></td>
        <td><%= link_to 'Show', menuitem %></td>
        <td><%= link_to 'Edit', edit_menuitem_path(menuitem) %></td>
        <td><%= link_to 'Destroy', menuitem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

